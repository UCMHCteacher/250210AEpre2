# Directories
SourceDir = ./src
MainSourceDir = $(SourceDir)/main
TestSourceDir = $(SourceDir)/test

IncludeDir = ./include

ReleaseDir = ./release

TestDir = ./test




# Sources
SourcePattern = %.cpp




# Release settings
ReleaseBinName = Application.exe

# target file type
# support types: lib, exe
ReleaseType ?= exe


# Compiler
CC = g++
CFlags = -fdiagnostics-color=always -g -I $(IncludeDir)

LibCC = ar
LibFlags = -crv




# make settings
MakeBin = mingw32-make